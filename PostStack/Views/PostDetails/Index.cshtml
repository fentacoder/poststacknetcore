@model PostValidation
@{
    ViewData["Title"] = "Update Post";
    int userId = Model.UserId;
}

@if(userId != -1)
{
    <div class="row">
        <h1 class="col-sm-12 text-center">Update Post</h1>
    </div>

    <div class="container">
        <div class="container">
            <form asp-action="MakeChanges" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group mt-1">
                    <label asp-for="Title">Title:</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="form-group mt-1">
                    <label asp-for="Body">Body:</label>
                    <input asp-for="Body" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary btn-block my-1">Save</button>
            </form>
        </div>
        <a class="btn btn-danger mt-1" asp-controller="Home" asp-action="Index" asp-route-id="@userId">Cancel</a>
    </div>
}