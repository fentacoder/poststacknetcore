@model UserValidation
@{
    ViewData["Title"] = "Register";
}

<div class="row my-1">
    <h1 class="text-center col-sm-12">Register</h1>
</div>

<div class="container" style="width: 60%;">
    <form asp-action="RegisterUser" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mt-1">
            <label asp-for="Name" class="label-primary">Name:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger text-center" style="width: 100%;"></span>
        </div>

        <div class="form-group mt-1">
            <label asp-for="Email" class="label-primary">Email:</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger text-center" style="width: 100%;"></span>
        </div>

        <div class="form-group mt-1">
            <label asp-for="Password" class="label-primary">Password:</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger text-center" style="width: 100%;"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block my-1">Register</button>
    </form>

    <a class="btn btn-primary btn-block my-1" asp-controller="Login" asp-action="LoginUser">Login</a>
</div>
